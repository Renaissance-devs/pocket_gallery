<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layouts/head') %>
  <title>Details</title>
</head>

<body>
  <%- include('../layouts/header') %>
  <main>
    <h4>Details</h4>
    <section class="work-section">
      <img id="img-detail" class="frame" style="background-color:<%= colors[0] %>;" src="<%= work.image_url ? work.image_url : '/assets/placeholder.jpg' %>">
      <h3><%= work.title %></h3>
      <p><%= work.artist %></p>
      <p><%= work.century %></p>
      <p>gallery > <%= work.name %></p>
      <form action="/works/<%=work.id%>" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" id="image_url" value="<%= work.image_url%>">
        <input type="hidden" id="title" value="<%= work.title%>">
        <input type="hidden" id="artist" value="<%= work.artist%>">
        <input type="hidden" id="century" value="<%= work.century%>">
        <select name="gallery" required>
          <option selected>Choose gallery</option>
          <% galleries.forEach(gallery => { %>
          <option value="<%= gallery.name %>"><%= gallery.name %></option>
          <%})%>
        </select>
        <button
          style="background-color:<%= colors[0] %>;<% if(RegExp(/#[0-9]/).test(colors[0].slice(0,2)) === true){ %>color: #ffffff; <% }else{ %> color: #000000; <% } %>" type="
          submit">Update Gallery</button>
      </form>
      <form action="/works/<%=work.id%>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button
          style="background-color:<%= colors[1] %>;<% if(RegExp(/#[0-9]/).test(colors[1].slice(0,2)) === true){ %>color: #ffffff; <% }else{ %> color: #000000; <% } %>" onclick="
          window.location.href='/'">Delete this Work</button>
    </form>
  </section>
 </main>
 <%- include('../layouts/footer') %>
</body>
<%- include ../layouts/scripts %>

</html>