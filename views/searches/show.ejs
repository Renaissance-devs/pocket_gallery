<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../layouts/head %>
  <title>Search Results</title>
</head>

<body>
  <%- include ../layouts/header %>
  <main>
    <section>
      <ul>
        <% works.forEach(work => { %>
        <li>
          <img src="<%= work.image_url ? work.image_url : 'assets/placeholder.jpg'%>">
          <p>Title: <%= work.title %></p>
          <p>Artist: <%= work.artist %></p>
          <p>Century: <%= work.century %></p>

          <form action="/works" method="POST">
            <input type="hidden" name="title" id="title" value="<%= work.title %>">
            <input type="hidden" name="artist" id="artist" value="<%= work.artist %>">
            <input type="hidden" name="century" id="century" value="<%= work.century %>">
            <input type="hidden" name="image_url" id="image_url" value="<%= work.image_url %>">
            <select name="gallery" id="gallery">
              <% galleries.forEach(gallery => { %>
              <option value="<%= gallery.gallery %>"><%= gallery.gallery %></option>
              <%})%>
            </select>
            <button type="submit">Save to Gallery</button>
          </form>
        </li>
        <%})%>
      </ul>
    </section>
  </main>
  <%- include ../layouts/footer %>
</body>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="/js/app.js"></script>

<%- include ../layouts/scripts %>

</html>