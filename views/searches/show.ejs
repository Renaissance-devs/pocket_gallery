<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../layouts/head %>
  <title>Search Results</title>
</head>

<body>
  <%- include ../layouts/header %>
  <main>
    <section>
      <ul>
        <% works.forEach(work => { %>
        <li>
          <img src="<%=work.image_url%>">
          <p>Title: <%= work.title %></p>
          <p>Artist: <%= work.artist %></p>
          <p>Century: <%= work.century %></p>
          <button class="select-button">Select this Work</button>
          <section class="hide-me" id="hidden-form">
            <%- include('../layouts/form', { formAction: 'POST', work: work}) %>
          </section>
        </li>
        <%})%>
      </ul>
    </section>
  </main>
  <%- include ../layouts/footer %>
</body>

</html>