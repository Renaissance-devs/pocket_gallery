<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ../layouts/head %>
  <title>Search Results</title>
</head>

<body>
  <%- include ../layouts/header %>
  <main>
    <section>
      <ul>
        <% works.forEach(work => { %>
        <li>
          <img src="<%=work.image_url%>">
          <p>Title: <%= work.title %></p>
          <p>Artist: <%= work.artist %></p>
          <p>Century: <%= work.century %></p>
          <button class="select-work">Select this Work</button>
          <form action="/works" method="POST">
            <input type="text" name="title" id="title" value="<%= work.title %>">
            <input type="text" name="artist" id="artist" value="<%= work.artist %>">
            <input type="text" name="century" id="century" value="<%= work.century %>">
            <input type="text" name="gallery" id="gallery" value="" required>
            <input type="hidden" name="image_url" id="image_url" value="<%= work.image_url %>">
            <input type="submit" value="Add this Work">
          </form>
        </li>
        <%})%>
      </ul>
    </section>
  </main>
  <%- include ../layouts/footer %>
</body>

</html>