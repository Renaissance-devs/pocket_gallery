<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layouts/head') %>
  <title>My Gallery</title>
</head>

<body>
    <%- include('../layouts/header') %>
  <main>
    <h4>Saved Works (<%= count %>)</h4>
    <ul>
      <% result.forEach(art => { %>
      <li class="art-items" data-work-id="<%= art.id %>">
        <section class="art-container detail-view">
          <img src="<%= art.image_url %>" alt="image of artwork">
          <h3><%= art.title %></h3>
          <span><%= art.artist %></span>
          <p>
            <% if (art.gallery) { %>
            Gallery:
            <%= art.gallery %>
            <% } %>
          </p>
          <p class="detail-button"><a id="details-a" href="/works/<%= art.id %>">View Details</a></p>
        </section>
      </li>
      <% }) %>
    </ul>
  </main>
  <%- include('../layouts/footer') %>
</body>

</html>